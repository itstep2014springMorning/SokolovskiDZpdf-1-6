#include <stdio.h>
#include <stdlib.h>

int main()
{
int i=1;
int x,p;
int result=1;
printf("Enter the number: ");
    scanf("%d",&x);
    printf("Enter the ground: ");
    scanf("%d",&p);

    while (result<=x){
    result=result*p;
    i=i+1;
}
if (p==0){
    result=0;

}
printf ("The degree is %d\n",i-2);
printf ("The degree %d is overload\n",i-1);
return 0;
}
