#include <stdio.h>
#include <stdlib.h>

int main()
{
int i=1;
int x,p;
float result=1;
printf("Enter the number: ");
    scanf("%d",&x);
    printf("Enter the degree: ");
    scanf("%d",&p);

    while (i<=p){
    result=result*x;
    i=i+1;
}
if (p==0){
    result=1;
}
if (p<=-1){
        while (i<=-p){
    result=(result*x);
    i=i+1;}
    result=1/result;
}
printf ("%d in degree %d is %2.3f",x,p,result);
return 0;
}
